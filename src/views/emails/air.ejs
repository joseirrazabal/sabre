              total: <%- data.payment && data.payment.amount ? data.payment.amount : '' %>
              moneda: <%- data.payment && data.payment.currency ? data.payment.currency : '' %>
              <% } %> -->

							<!-- estado -->
							<!-- codigo de reserva: <%= data.reservationCode %> -->
				</table>
				<!--[if (gte mso 9)|(IE)]>
         </td></tr>
         </table><![endif]-->
			</td>
		</tr>
	</table>
</body>

</html>
